            = link_to sport_season_stats_path(sport_id: 1, season_id: @season.id - 1) + '#tournment' do
              = image_tag "left.png", size: "100x100"
        .column.is-6.is-center
          h1.title.is-1 = @season.name
          hr.content-divider
          / h2.subtitle = "#{@days.last.date.strftime("%d.%m.%Y")} - #{@days.first.date.strftime("%d.%m.%Y")}"
        .column.is-3.is-left
          - if @season.id != Season.count
            = link_to sport_season_stats_path(sport_id: 1, season_id: @season.id + 1) + '#tournment' do
              = image_tag "right.png", size: "100x100"
    .container
      .columns.is-mobile
        .table-container
          table.table.has-text-white.is-bordered
            thead
              tr.has-text-white
                th
                th –ò–≥—Ä–æ–∫
                th
                  div = link_to '–î–Ω–µ–π', sport_season_stats_path(sort: :days)
                  - Team.all_cached.each do |team|
                    = link_to sport_season_stats_path(sport_id: 1, season_id: @season.id, sort: :days, team: team.code) do
                      = image_tag "colors/#{team.code}.png", size: "15x20"
                      | &nbsp
                th –ü–Ω / –°—Ä
                th = link_to '–ò–≥—Ä',  sport_season_stats_path(sort: :games)
                th = link_to 'ELO',  sport_season_stats_path(sort: :elo)
                th = link_to '‚öΩÔ∏è', sport_season_stats_path(sort: :goals_count)
                th = link_to 'ü¶∂', sport_season_stats_path(sort: :assists_count)
                th
